{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "overrides": [
       
    ],
    "plugins": [
        "spellcheck"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["**/tsconfig.json"]
    },
    "rules": {
        "@typescript-eslint/strict-boolean-expressions": 0,
        "spellcheck/spell-checker": [1, {
            "comments": true,
            "strings": true,
            "identifiers": true,
            "templates": true,
            "skipWords": [
                "healthcheck","req"
            ],
            "skipIfMatch": [
                "http://[^s]*",
                "^[-\\w]+\/[-\\w\\.]+$"
            ],
            "skipWordIfMatch": [
                "^foobar.*$"
            ],
            "minLength": 3
         }]
    }
}
